<header>
  <%if (!username) {%>
  <form action="/login" method="POST">
    <input type="text" name="username" placeholder="Username">
    <button type="submit">Submit</button>
  </form>
  <% } else { %>
  <form action="/login" method="POST">
    <p>Logged in as <%= username %><p>
    <button type="submit">Logout</button>
  </form>
  <% } %>
</header>
