<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/_head %>
</head>
<body class="index-page-body">
  <% include partials/_header %>
  <a id="create-new-link" href="/urls/new" style="text-decoration:none">Create a New Short Link</a>

  <% for (let prop in urls) { %>
    <section id="index-page-main">
      <% if (urls[prop].ownedByCurrentUser) {%>
        <div class="shorturl-longurl">
          <a href="http://localhost:3000/u/<%=prop%>" target="_blank">
            http://localhost:3000/u/<%= prop %>
          </a>
          <p><%= urls[prop].longURL %></p>
        </div>
        <% } %>
        <div class="urls-index-forms">
          <form class="edit-form" action="/urls/<%= prop %>" method="GET">
            <% if (urls[prop].ownedByCurrentUser) {%>
              <button type="submit"><a href="/urls/<%= prop %>" style="text-decoration:none">Edit</a></button>
            <% } %>
          </form>
          <form class="delete-form" action="/urls/<%= prop %>/delete" method="POST">
            <% if (urls[prop].ownedByCurrentUser) {%>
              <button type="submit">Delete</button>
            <% } %>
          </form>
        </div>
    </section>
<% } %>
</body>
</html>
